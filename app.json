{
  "expo": {
    "name": "PPG Data Pipeline",
    "slug": "ppg-data-pipeline",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "plugins": [
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "We need camera access to measure your heart rate from your finger.",
          "enableCodeScanner": false
        }
      ],
      "expo-font"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ppgdatapipeline.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires camera access to capture PPG signals from your fingertip."
      }
    },
    "android": {
      "package": "com.ppgdatapipeline.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.CAMERA"
      ]
    },
    "extra": {
      "eas": {
        "projectId": "25a39ed7-a485-435c-887f-0e51b56e9d0b"
      }
    }
  }
}